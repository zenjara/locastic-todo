{% extends 'base.html.twig' %}
{% block body %}
{% if error %}
    <div class="error_msg">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="container forma" >
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input  class="form-control" type="text" id="email" name="_email" value="{{ last_username }}" required/>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="_password" required/>
                <input type="hidden" name="_target_path" value="/dashboard" />
            </div>


            <button type="submit" name="Login" class="btn btn-default">Login</button>
        </form>

   </div>

{% endblock body %}