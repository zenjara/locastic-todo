                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Priority</th>
                                    <th>Deadline</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {%for task in list.getTasks %}
                                    {% if not task.getIsCompleted %}
                                        {%  set numberNotCompleted= numberNotCompleted+1 %}
                                    {% endif %}
