                                    <tr class="tasks-table">
                                        <td class="id"> {{ task.id }}</td>
                                        <td class="name"> {{ task.name }}</td>
                                        <td>{{ task.priority }}</td>
                                        <td>{{ task.deadline| localizeddate('long', 'short') }}</td>
                                        <td>{% if task.getIsCompleted %} Completed  {% else %} Not completed {% endif %}</td>
                                        <td><button class="btn btn-danger delete-task">Delete Task</button><button class="btn btn-info edit-task">Edit Task</button></td>

                                    </tr>
                                    {% endif %}

